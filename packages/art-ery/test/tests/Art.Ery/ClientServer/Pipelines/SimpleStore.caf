import &StandardImport

class SimpleStore extends KeyFieldsMixinCaf Pipeline
  @abstractClass()

  constructor: ->
    @db = {}

  @publicRequestTypes :reset :get :create :update :delete

  @handlers
    reset:  ({data}) -> @db = data; true
    get:    ({key})  -> @db[key]

    create: (request) ->
      key =
        if request.pipeline.keyFields.length > 1
          request.pipeline.toKeyString request.requestData
        else randomString 8

      @db[key] = merge request.data, request.pipeline.toKeyObject key

    update: (request) ->
      request extract data, key = request.pipeline.toKeyString data

      if @db[key]
        @db[key] = merge @db[key], data

      else null

    delete: (request) ->
      request extract data, key = request.pipeline.toKeyString data

      if out = @db[key]
        delete @db[key]
        out

      else null
