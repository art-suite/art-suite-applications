import &StandardImport

suite: ->
  test "fields are set correctly", ->
    class MyPipeline extends SimplePipeline
      @filter UuidFilter

    assert.eq MyPipeline.getFields().id.dataType, :string

  test "create", ->
    class MyPipeline extends SimplePipeline
      @filter UuidFilter

    new MyPipeline
    .create {}
    .then ({id}) -> assert.match id, /// ^[-a-f0-9]{36}$
