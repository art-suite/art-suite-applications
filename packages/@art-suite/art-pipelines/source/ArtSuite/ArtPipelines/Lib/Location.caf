import &ArtStandardLib

{}
  validLocations = :client :server :both
  validLocationsRegexp = /^client|server|both$/
  validateLocation: (location) ->
    throw new Error "Invalid location: #{formattedInspect location}. Valid locations: #{validLocations.join ', '}" unless validLocationsRegexp.test location
    location

  getDefaultLocation: -> if isBrowser then :client else :server