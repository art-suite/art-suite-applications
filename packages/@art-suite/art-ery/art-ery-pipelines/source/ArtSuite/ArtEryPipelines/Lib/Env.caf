import &ArtStandardLib
{ART_PIPELINES_DETAILED_REQUEST_TRACING} = getEnv()

ART_PIPELINES_DETAILED_REQUEST_TRACING =
  switch ART_PIPELINES_DETAILED_REQUEST_TRACING
  when :false then false
  when :true then true
  else ART_PIPELINES_DETAILED_REQUEST_TRACING

{}
  getDetailedRequestTracingEnabled = ->
    ART_PIPELINES_DETAILED_REQUEST_TRACING != false
    && ART_PIPELINES_DETAILED_REQUEST_TRACING || &ArtConfig.getArtConfigName() != :Production

  getDetailedRequestTracingExplanation: ->
    if getDetailedRequestTracingEnabled()
          "" NOTE: Detailed request tracing is enabled. (set ART_PIPELINES_DETAILED_REQUEST_TRACING=false to disable)
    else  "" NOTE: Detailed request tracing is disabled. (set ART_PIPELINES_DETAILED_REQUEST_TRACING=true to enable)
