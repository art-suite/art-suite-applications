package: -> &package

webpack:

  # common properties are merged into each target's properties
  common:
    mode:     :development
    devtool:  :source-map

    resolve:
      fallback:
        crypto: require.resolve :crypto-browserify
        stream: require.resolve :stream-browserify

  # each target's individual properties
  targets:
    Client: {}
    Server: target: :node